{
  "name": "flint-project-v0-server",
  "version": "1.0.0",
  "description": "Minimal NestJS TypeScript server",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "start:dev": "nodemon --exec ts-node src/main.ts",
    "start:debug": "nodemon --exec ts-node --inspect src/main.ts",
    "docker:build": "docker build -t flint-server .",
    "docker:run": "docker run -p 8080:8080 flint-server",
    "docker:dev": "docker compose up --build"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "nestjs",
    "typescript",
    "nodejs",
    "api"
  ],
  "author": "",
  "license": "MIT"
}
